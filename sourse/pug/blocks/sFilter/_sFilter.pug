mixin filterCheck(type, text, btn)
	.sFilter__check
		+in-c(`${type}`, `${text}`)&attributes(attributes)
		if btn
			button(type="button"): +icon('help')


mixin sFilter(data)
	// start sFilter
	+b.sFilter&attributes(attributes) 
		+e.btn.d-lg-none
			span 20
			//- +icon('filters') 
			| Фильтры
		+e.wrap
			+e.body
				+e.filterHead
					h5 Фильтры
					+e.BUTTON.filterCloseBtn
						span
						
				+ddGroup()
					+e.wraper
						+ddGroupItem('Цена, ₽', 'active')
							.extra-controls
								label
									span от
									input.js-input-from(type='number' value='0')
								label
									span до
									input.js-input-to(type='number' value='0')
							.range-slider
								input.js-range-slider(type='number' value='')
						
						+ddGroupItem('Цвет')
							// класс .check-light для темных цветов (белый чек)
							+filterCheck('checkbox', 'Белый')(style="--checkBg: #fff")
							+filterCheck('checkbox', 'Серый')(style="--checkBg: #DEDEDE")
							+filterCheck('checkbox', 'Светло-коричневый')(style="--checkBg: #F2E4BA")
							+filterCheck('checkbox', 'Темно-коричневый')(style="--checkBg: #633007").check-light
							+filterCheck('checkbox', 'Черный')(style="--checkBg: #000000").check-light

						+ddGroupItem('Материал')
							+filterCheck('checkbox', 'Массив', 'btn')
							+filterCheck('checkbox', 'Грунт под покраску')
							+filterCheck('checkbox', 'Шпон', 'btn')
							+filterCheck('checkbox', 'Ciplex', 'btn')
							+filterCheck('checkbox', 'Алюминий и стекло')
							+filterCheck('checkbox', 'Technofoil ламинатин', 'btn')
							+filterCheck('checkbox', 'Алюминий и стекло')
							+filterCheck('checkbox', 'Шпон', 'btn')
							
						+ddGroupItem('Остекление')
