						+ddGroupItem('Прочее')
							+filterCheck('checkbox', 'Акция')
							+filterCheck('checkbox', 'Новинка')
				+e.fixedBtns
					+e.BUTTON.btn-showMore.btn.btn-dark Посмотреть 296 предложений
		//- +e.btn-bottom.d-lg-none
