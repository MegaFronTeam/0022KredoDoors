mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(img, t,...items)
	+b.page-head.bg-wrap
		- let l = items.length
		+img(`img/${img}`, 'bg').picture-bg
		+e.wrap
			.container
				+breadcrumb('Главная',...items)

				h1= t

mixin card-item(data)
	+b.card&attributes(attributes)
		+e.img-wrap(href='#')
			.img-wrap-center
				+img(`img/${data.img}`, 'bg')
		+e.content
			+e.content-row.row
				.col
					if data.title
						+e.title.h5!= data.title
					if data.text
						+e.text!= data.text
				if !data.notBtn
					.col-md-auto
						+e.btn.btn.btn-primary(href="#") Узнать больше
				if data.isIcon
					.col-auto
						+e.link(href="#"): +icon('arrow-right')


mixin product-card(img, title, price, ...items)
	// start product-card
	+b.product-card
		+e.head
			+e.tags 
				span Новинка
			// активное состояние - .active
			+e.btn-like(href='#')
				+icon('heart')
		.slider-wrapper
			+e.slider--js.swiper
				.swiper-wrapper
					- for (var x = 1; x < 6; x++)
						+e.slide.swiper-slide
							+e.img-wrap(href='#')
								.img-wrap-center
									+img(`img/product-${img}.jpg`, 'bg')
				+arrow()
			.swiper-pagination
		+e.caption
			+e.title(href="#")!= title
			ul
				each item in items
					li!= item
			+e.price
				span!= price
				// активное состояние - .active
				+e.btn-add(href='#')
					+icon('cart')

mixin upload-field(title)
	+b.upload-field
		+e.title.form-wrap__input-title!=title
		+e.wrap
			+e.input-wrap
				+e.LABEL.btn.btn.btn-secondary
					input.input-upload(type='file' name='file')
					span Выберите файл
			+e.file-name Файл не выбран
